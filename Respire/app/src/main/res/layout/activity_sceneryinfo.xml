<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/poolbackground"
    tools:context="com.example.respireapp.Activity.SceneryInfoActivity">

    <Button
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:background="@drawable/todaybackicon"
        android:id="@+id/sbackButton"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scenery"
        android:id="@+id/SceneryName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="25dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Photos"
        android:layout_below="@+id/SceneryName"
        android:layout_centerHorizontal="true"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/sceneryTable"
            android:shrinkColumns="0,1"
            android:stretchColumns="0,1"
            >

        </TableLayout>
    </ScrollView>




</RelativeLayout>
