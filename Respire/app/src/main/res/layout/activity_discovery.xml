<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/discoverybackground"
    tools:context="com.example.respireapp.Activity.DiscoveryActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView22"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/discoveryaboveback"
        android:adjustViewBounds="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView23"
        android:layout_below="@+id/imageView22"
        android:layout_centerHorizontal="true"
        android:src="@drawable/discoverynewsbackground"
        android:adjustViewBounds="true"
        />





    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/tabbar"
        android:adjustViewBounds="true"

        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@id/imageView13"
        android:layout_alignParentRight="true"


        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Home"
            android:id="@+id/homeButton"
            android:layout_alignBottom="@+id/imageView13"
            android:layout_alignTop="@id/imageView13"
            android:layout_alignLeft="@id/imageView13"
            android:background="#00ffffff"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="History"
            android:id="@+id/historyButton"
            android:layout_alignTop="@+id/imageView13"
            android:layout_toRightOf="@+id/homeButton"
            android:layout_alignBottom="@+id/imageView13"
            android:background="#00ffffff"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Discovery"
            android:id="@+id/discoveryButton"
            android:layout_alignBottom="@+id/imageView13"
            android:layout_toRightOf="@+id/historyButton"
            android:layout_alignTop="@+id/imageView13"
            android:background="#00ffffff"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Me"
            android:id="@+id/meButton"
            android:layout_alignBottom="@+id/imageView13"
            android:layout_toRightOf="@+id/discoveryButton"
            android:layout_alignTop="@+id/imageView13"
            android:layout_alignParentRight="true"
            android:background="#00ffffff"
            android:layout_weight="1"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:src="@drawable/active"
        android:layout_alignBottom="@id/imageView13"
        android:layout_alignRight="@id/imageView13"

        />



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="192dp"
            android:layout_height="195dp"
            android:id="@+id/imageButton2"
            android:src="@drawable/discoveryback3"
            android:layout_row="1"
            android:layout_column="0"

            android:adjustViewBounds="false" />

        <ImageButton
            android:layout_width="192dp"
            android:layout_height="195dp"
            android:id="@+id/imageButton3"
            android:src="@drawable/discoveryback4"
            android:layout_row="1"
            android:layout_column="1"

            android:adjustViewBounds="true" />



    </GridLayout>

</RelativeLayout>

