<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mebackground"
    tools:context=".Activity.ChangeUsernameActivity">
    <ImageButton
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/backButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/backicon"
        android:adjustViewBounds="false"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:background="#00ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Change : "
        android:textColor="#cac5c5"
        android:layout_marginTop="100dp"
        android:textSize="30dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/regtypein"
        android:inputType="phone"
        android:ems="10"
        android:textSize="30dp"
        android:id="@+id/phoneText"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="130dp"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/loginbuttonbg"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:text="Save"
        android:textSize="25dp"
        android:id="@+id/saveButton"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoText"
        android:layout_below="@+id/saveButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#e8aaaa"
        android:textSize="25dp" />
</RelativeLayout>
