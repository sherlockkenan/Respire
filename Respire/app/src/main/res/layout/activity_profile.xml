<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mebackground"
    tools:context="com.example.respireapp.Activity.ProfileActivity">

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/backButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/backicon"
        android:adjustViewBounds="false"
        android:clickable="true"
        android:background="#00ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:layout_marginTop="0dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <TextView
            android:text="Username : "
            android:id="@+id/textView3"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/usernameText"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="right|center_vertical"
            android:text="Example"
            android:textSize="25dp"
            android:textColor="#c0baba" />

        <TextView
            android:text="Password : "
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_height="40dp"
            android:textSize="25dp"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/passwordText"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="25dp"
            android:layout_gravity="right|center_vertical"
            android:text="Change"
            android:textColor="#ffffff" />

        <TextView
            android:text="Phone : "
            android:id="@+id/textView6"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_height="40dp"
            android:textSize="25dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/phoneText"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="right|center_vertical"
            android:text="110"
            android:textSize="25dp"
            android:textColor="#c0baba" />

        <TextView
            android:text="Email : "
            android:id="@+id/textView7"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_height="40dp"
            android:textSize="25dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/emailText"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="right|center_vertical"
            android:text="ExampleEmail"
            android:textSize="25dp"
            android:textColor="#c0baba" />

        <TextView
            android:text="Gender : "
            android:id="@+id/textView8"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_height="40dp"
            android:textSize="25dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/sexText"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="right"
            android:text="Female"
            android:textSize="25dp"
            android:textColor="#c0baba" />

        <TextView
            android:text="City : "
            android:id="@+id/textView9"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_height="40dp"
            android:textSize="25dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/city1Text"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_gravity="right"
            android:text="City1"
            android:textSize="25dp"
            android:textColor="#c0baba" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/city2Text"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_gravity="right"
            android:text="City2"
            android:textSize="25dp"
            android:textColor="#c0baba" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/city3Text"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_gravity="right"
            android:text="City3"
            android:textSize="25dp"
            android:textColor="#c0baba" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/city4Text"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_gravity="right"
            android:text="City4"
            android:textSize="25dp"
            android:textColor="#c0baba" />

        <ImageView
            android:src="@drawable/meright"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:layout_column="2"
            />
        <ImageView
            android:src="@drawable/meright"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:layout_column="2"
            />
        <ImageView
            android:src="@drawable/meright"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_row="3"
            android:layout_column="2"
            />
        <ImageView
            android:src="@drawable/meright"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_row="4"
            android:layout_column="2"
            />
        <ImageView
            android:src="@drawable/meright"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_row="5"
            android:layout_column="2"
            />
        <ImageView
            android:src="@drawable/meright"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_row="6"
            android:layout_column="2"
            />

        <Button
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:id="@+id/usernameButton"
            />
        <Button
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:id="@+id/passwordButton"
            />
        <Button
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:id="@+id/phoneButton"
            />
        <Button
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:id="@+id/emailButton"
            />
        <Button
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:id="@+id/sexButton"
            />
        <Button
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_rowSpan="4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#00ffffff"
            android:id="@+id/cityButton"
            />

    </GridLayout>


</RelativeLayout>
