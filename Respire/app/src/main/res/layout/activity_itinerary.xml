<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.respireapp.Activity.ItineraryActivity"
    android:background="@drawable/poolbackground"
    >

    <Button
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:background="@drawable/todaybackicon"
        android:id="@+id/backButton"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Itinerary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:id="@+id/infoText"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "When PM2.5 is over moderately polluted, it is suggested to use subway."
        android:id="@+id/info1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:textColor="#c6bdbd"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/info1"
        android:text="When air quality is good, it is suggested to take bus."
        android:textColor="#c6bdbd"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>
