<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.HomeActivity"
    android:background="@drawable/homebackground"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:columnCount="4"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView6"
            android:src="@drawable/homeshareicon"
            android:layout_column="3"
            android:layout_gravity="right"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:foreground="#00000000" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/shareButton"
            android:layout_column="3"
            android:layout_gravity="right"
            android:layout_row="0"
            android:background="#00ffffff" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/homebigcircle"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:adjustViewBounds="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/todayButton"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:clickable="true"
            android:onClick="todayClick"
            android:background="#00ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:id="@+id/textView9"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:id="@+id/totalText"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="#ffffff"
            android:textSize="40dp"
            />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/imageView4"
            android:src="@drawable/divider"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:layout_row="2"
            />

    </GridLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            >





            <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/imageView5"
                android:src="@drawable/homecircle1"
                android:layout_column="0"
                android:layout_gravity="center_vertical|right"
                android:layout_row="3"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLUETOOTH"
                android:id="@+id/textView10"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:textSize="20dp"
                android:textColor="#ffffff"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/bluetoothSwitch"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_gravity="right"
                />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/imageView7"
                android:src="@drawable/divider"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_gravity="center_horizontal"
                android:layout_row="4"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/imageView8"
                android:src="@drawable/homecircle2"
                android:layout_column="0"
                android:layout_gravity="center_vertical|right"
                android:layout_row="5"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM 2.5"
                android:id="@+id/textView11"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#ffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPEN AIR CLEANER ?"
                android:id="@+id/textView12"
                android:layout_row="5"
                android:layout_column="3"
                android:layout_gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#ffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="264"
                android:id="@+id/pm25Text"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:textSize="25dp"
                android:textColor="#ffffff"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text=""
                android:id="@+id/airSwitch"
                android:layout_row="6"
                android:layout_column="3"
                android:layout_gravity="right|center_vertical"
                />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView9"
                android:src="@drawable/divider"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_gravity="center_horizontal"
                android:layout_row="7"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView10"
                android:src="@drawable/homecircle3"
                android:layout_column="0"
                android:layout_gravity="center_vertical|right"
                android:layout_row="8"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="CO2"
                android:id="@+id/textView13"
                android:layout_row="8"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#ffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="10%"
                android:id="@+id/co2Text"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:textSize="25dp"
                android:textColor="#ffffff"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/imageView11"
                android:src="@drawable/divider"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_gravity="center_horizontal"
                android:layout_row="10"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/imageView12"
                android:src="@drawable/homecircle3"
                android:layout_column="0"
                android:layout_gravity="center_vertical|right"
                android:layout_row="11"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SO2"
                android:id="@+id/textView14"
                android:layout_row="11"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#ffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="5%"
                android:id="@+id/so2Text"
                android:layout_row="12"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:textSize="25dp"
                android:textColor="#ffffff"
                />


        </GridLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/tabbar"
        android:adjustViewBounds="true"

        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@id/imageView13"
        android:layout_alignParentRight="true"


        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Home"
            android:id="@+id/homeButton"
            android:layout_alignBottom="@+id/imageView13"
            android:layout_alignTop="@id/imageView13"
            android:layout_alignLeft="@id/imageView13"
            android:background="#00ffffff"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="History"
            android:id="@+id/historyButton"
            android:layout_alignTop="@+id/imageView13"
            android:layout_toRightOf="@+id/homeButton"
            android:layout_alignBottom="@+id/imageView13"
            android:background="#00ffffff"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Discovery"
            android:id="@+id/discoveryButton"
            android:layout_alignBottom="@+id/imageView13"
            android:layout_toRightOf="@+id/historyButton"
            android:layout_alignTop="@+id/imageView13"
            android:background="#00ffffff"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Me"
            android:id="@+id/meButton"
            android:layout_alignBottom="@+id/imageView13"
            android:layout_toRightOf="@+id/discoveryButton"
            android:layout_alignTop="@+id/imageView13"
            android:layout_alignParentRight="true"
            android:background="#00ffffff"
            android:layout_weight="1"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:src="@drawable/active"
        android:layout_alignBottom="@id/imageView13"
        android:layout_alignLeft="@id/imageView13"

        />

</RelativeLayout>
