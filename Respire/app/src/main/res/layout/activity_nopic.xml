<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/poolbackground"
    tools:context="com.example.respireapp.Activity.PhotoInfoActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo Info"
        android:textSize="35dp"
        android:textColor="#ffffff"
        android:id="@+id/textView16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/todaybackicon"
        android:id="@+id/backButton"
        android:layout_marginTop="5dp"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/photoTable"
        android:stretchColumns="0,1"
        android:shrinkColumns="0,1"
        ></TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:id="@+id/locationText"
        android:layout_below="@+id/photoTable"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:id="@+id/imageView9"
        android:layout_below="@+id/photoTable"
        android:layout_toLeftOf="@+id/locationText"
        android:layout_toStartOf="@+id/locationText"
        android:src="@drawable/location"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:id="@+id/descriptionText"
        android:layout_below="@+id/imageView9"
        android:layout_alignLeft="@+id/photoTable"
        android:layout_alignStart="@+id/photoTable" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PM2.5:100"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:id="@+id/pm25Text"
        android:layout_below="@+id/descriptionText"
        android:layout_alignLeft="@+id/descriptionText"
        android:layout_alignStart="@+id/descriptionText"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CO2:20"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:id="@+id/co2Text"
        android:layout_alignTop="@+id/pm25Text"
        android:layout_toRightOf="@+id/pm25Text"
        android:layout_toEndOf="@+id/pm25Text"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SO2:50"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:id="@+id/so2Text"
        android:layout_alignTop="@+id/co2Text"
        android:layout_toRightOf="@+id/co2Text"
        android:layout_toEndOf="@+id/co2Text"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:id="@+id/timeText"
        android:layout_below="@+id/pm25Text"
        android:layout_alignLeft="@+id/pm25Text"
        android:layout_alignStart="@+id/pm25Text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:id="@+id/usernameText"
        android:layout_below="@+id/timeText"
        android:layout_alignLeft="@+id/timeText"
        android:layout_alignStart="@+id/timeText" />


</RelativeLayout>
