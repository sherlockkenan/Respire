<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/poolbackground"
    tools:context="com.example.respireapp.Activity.PoolActivity">

    <Button
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:background="@drawable/todaybackicon"
        android:id="@+id/backButton"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鱼塘"
        android:id="@+id/PoolName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="25dp"
        />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/photoButton"
        android:background="@drawable/homeshareicon"
        android:layout_alignParentRight="true" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:id="@+id/divid3"
        android:src="@drawable/divider"
        android:layout_below="@id/photoButton"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Ranking"
        android:layout_below="@+id/divid3"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/Table"
            android:shrinkColumns="0,1,2"
            android:stretchColumns="0,1,2">

            <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranking"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#efefef"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_row="0"
                android:layout_column="1"
                android:textColor="#efefef"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM2.5"
                android:layout_row="0"
                android:layout_column="2"
                android:textColor="#efefef"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                />
            </TableRow>
        </TableLayout>

    </ScrollView>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:id="@+id/divid4"
        android:src="@drawable/divider"
        android:layout_below="@id/Ranking"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo Wall"
        android:id="@+id/wallText"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/divid4"
        android:textColor="#ffffff"
        android:textSize="25dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Photos"
        android:layout_below="@+id/wallText"
        android:layout_centerHorizontal="true"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/photoTable"
            android:shrinkColumns="0,1"
            android:stretchColumns="0,1">

        </TableLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thephoto"
        />

</RelativeLayout>
