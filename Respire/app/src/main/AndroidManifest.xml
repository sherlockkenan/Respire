        <activity android:name=".Activity.PoolActivity" />
        <activity android:name=".Activity.AirqualityActivity" />
        <activity
            android:name=".Activity.map.HeatMap"
            android:label="@string/app_name" />
        <activity android:name=".Activity.map.UserDayMap" />
        <activity android:name=".Activity.DataActivity"></activity>
        <activity android:name=".Activity.ItineraryActivity"></activity>
    </application>

</manifest>